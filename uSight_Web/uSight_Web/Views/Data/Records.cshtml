@model IEnumerable<uSight_Web.Models.Record>

@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Home/Index.cshtml";
}

<h2>Records</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.license_plate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.times_searched)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastest_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.searched_by)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.license_plate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.times_searched)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastest_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.searched_by)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

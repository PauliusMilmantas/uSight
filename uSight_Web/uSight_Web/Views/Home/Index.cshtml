@{ ViewBag.Title = "Home Page"; }

<br><br>

<div class="Container">
    <div class="row">

        <div class="col-xs col-sm-8 col-lg-6 align-self-center">
            <img src="@ViewBag.ImageData" class="img-responsive">
            <br>
            <div class="text-center">
                <h1 style="font-family:Arial Black; color:@ViewBag.LicensePlateColor">@ViewBag.LicensePlate</h1>
                <div style="color:@ViewBag.LabelColor">@ViewBag.Label</div>
            </div>
        </div>
        <br>
        <div class="col-xs-4 col-sm-3 col-lg-2">
            <form method="POST">
                <div class="TextBox-position">
                    <input type="text" name="text" class="TextBoxHome" />
                    <input type="submit" value="Submit Text" class="btn btn-primary btn-sm submit-home-text" />
                    <div class="ErrorMessage2">@ViewBag.ErrorMessage2</div>
                </div>
            </form>

            <div class="button_position">

                @using (Html.BeginForm("Index",
                                        "Home",
                                        FormMethod.Post,
                                        new { enctype = "multipart/form-data" }))
                {
                    <div class="box">
                        <input type="file" name="file" id="file" class="inputfile inputfile-2" accept=".jpg, .png">
                        <label for="file">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4
                                2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2
                                2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0
                                1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path>
                            </svg>
                            <span>Choose…</span>
                        </label>
                    </div>

                    <input type="submit" value="Submit Image" class="btn btn-primary btn-sm submit-home-file" />
                    <br>
                    <div style="color:red" class="ErrorMessage">@ViewBag.ErrorMessage</div>

                }
            </div>
        </div>
    </div>
</div>

